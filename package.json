{
  "name": "fintrack",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22 <23",
    "npm": ">=10"
  },
  "scripts": {
  "prepare": "husky",

  "dev": "next dev",
  "build": "next build",
  "start": "next start",

  "lint": "eslint .",
  "check": "npm run lint && npm run build",

  "prisma:generate": "node --env-file=.env ./node_modules/prisma/build/index.js generate",
  "prisma:migrate": "node --env-file=.env ./node_modules/prisma/build/index.js migrate dev",
  "prisma:studio": "node --env-file=.env ./node_modules/prisma/build/index.js studio",
  "prisma:seed": "node --env-file=.env ./node_modules/prisma/build/index.js db seed",

  "postinstall": "sh -c 'if [ -f .env ]; then node --env-file=.env ./node_modules/prisma/build/index.js generate; else node ./node_modules/prisma/build/index.js generate; fi'"
  },
  
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "prisma": {
    "seed": "node --env-file=.env prisma/seed.js"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "next": "16.1.4",
    "pg": "^8.17.2",
    "prisma": "^7.3.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22.19.7",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
