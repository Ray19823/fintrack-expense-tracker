generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TxnDirection {
  INCOME
  EXPENSE
}

enum CategoryType {
  INCOME
  EXPENSE
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  passwordHash String
  passwordSalt String
  createdAt    DateTime      @default(now())
  sessions     Session[]
  transactions Transaction[]
  budgets      Budget[]
}

model Session {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([userId])
  @@index([expiresAt])
}

model Category {
  id        String       @id @default(uuid())
  name      String
  type      CategoryType
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  txns    Transaction[]
  budgets Budget[]

  @@unique([name, type])
}

model Transaction {
  id          String       @id @default(uuid())
  userId      String
  categoryId  String
  direction   TxnDirection
  amount      Decimal // store positive
  txnDate     DateTime     @db.Date
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  @@index([userId, txnDate])
  @@index([categoryId])
}

model Budget {
  id          String   @id @default(uuid())
  userId      String
  categoryId  String
  monthStart  DateTime @db.Date
  limitAmount Decimal
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, categoryId, monthStart])
  @@index([userId, monthStart])
}
